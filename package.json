{
  "name": "decentrilized-protocol",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:bundle": "./node_modules/.bin/ttsc -p tsconfig-build.json",
    "build:declaration": "./node_modules/.bin/ttsc -p tsconfig-build.json --emitDeclarationOnly",
    "build:rollup": "rollup -c",
    "build:lib": "npm run build:rollup && npm run build:declaration",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "patch-package",
    "start:wrtc-star": "./node_modules/.bin/star-signal --port=9090 --host=127.0.0.1",
    "start:ws-star": "./node_modules/.bin/stardust-server",
    "prettier:write": "prettier --parser typescript --write \"src/**/*.{ts,tsx}\"",
    "prettier:staged": "pretty-quick --staged --parser typescript --write",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore src",
    "lint:tests": "eslint --quiet --cache --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore ./src/test",
    "lint:file": "eslint --cache --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "lint:quiet": "eslint --quiet --cache --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore --ignore-pattern \"*.test.*\" src",
    "lint:quiet:fix": "eslint --quiet --fix --cache --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore --ignore-pattern \"*.test.*\" src",
    "lint:staged": "eslint . --quiet --ignore-path .gitignore --cache --ext .js,.jsx,.ts,.tsx --ignore-pattern \"*.test.*\" --ignore-pattern '/__test__/*'",
    "launch:chromium:unsecure": "google-chrome --disable-web-security --allow-file-access-from-files --user-data-dir=\"/tmp/chromium_tmp\""
  },
  "main": "dist/lib.umd.js",
  "module": "dist/lib.modern.module.js",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run lint:staged",
      "git add ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:staged && lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@trust/webcrypto": "0.9.2",
