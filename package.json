    "lz-string": "^1.4.4",
    "mime": "^2.4.4",
    "multiaddr": "^7.4.3",
    "multiaddr-to-uri": "^5.1.0",
    "normalize-url": "^4.5.0",
    "orbit-db": "^0.23.1",
    "orbit-db-access-controllers": "^0.2.4",
    "orbit-db-cache": "^0.3.0",
    "orbit-db-identity-provider": "^0.2.1",
    "orbit-db-keystore": "^0.3.4",
    "orbit-db-storage-adapter": "^0.5.3",
