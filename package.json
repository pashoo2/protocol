    "@types/date-fns": "^2.6.0",
    "@types/encoding-down": "^5.0.0",
    "@types/firebase": "^3.2.1",
    "@types/jest": "^24.9.1",
    "@types/level-js": "^4.0.1",
    "@types/levelup": "^3.1.1",
    "@types/localforage": "0.0.34",
    "@types/lodash.defaultsdeep": "^4.6.6",
    "@types/lodash.memoize": "^4.1.6",
    "@types/lz-string": "^1.3.33",
    "@types/mime": "^2.0.1",
    "@types/mocha": "^5.2.7",
    "@types/multiaddr": "^7.2.0",
    "@types/node": "12.0.12",
    "@types/orbit-db": "file:node_modules-local/orbit-db-types",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "@types/uuid": "^3.4.5",
    "@types/validator": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^2.8.1-alpha.12",
    "@typescript-eslint/parser": "^2.8.1-alpha.12",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
