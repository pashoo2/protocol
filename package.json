{
  "name": "decentralized-protocol",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "cp src/index.ts ../__test__.index.ts && cp src/prod.ts src/index.ts",
    "postbuild": "cp ../__test__.index.ts src/index.ts && rm ../__test__.index.ts",
    "build:module:script": "node ./module-build",
    "build:module": "npm run prebuild && ./node_modules/.bin/ttsc -p tsconfig-build.json && npm run build:module:script && npm run postbuild",
    "build:declaration": "./node_modules/.bin/ttsc -p tsconfig-build.json --emitDeclarationOnly",
    "build:rollup": "npm run prebuild && rollup -c",
    "build:bundle": "./node_modules/.bin/cross-env-shell NODE_OPTIONS=--max_old_space_size=4096 npm run build:rollup && npm run build:declaration",
    "start": "cp src/dev.ts src/index.ts && react-scripts start",
    "build": "export NODE_OPTIONS=--max_old_space_size=4096 && npm run prebuild && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "apply:patches": "patch-package",
    "postinstall": "rm -rf node_modules/orbit-db/node_modules/orbit-db-access-controllers && npm run apply:patches",
    "start:wrtc-star": "./node_modules/.bin/star-signal --port=9090 --host=127.0.0.1",
    "start:ws-star": "./node_modules/.bin/stardust-server",
    "prettier:write": "prettier --parser typescript --write \"src/**/*.{ts,tsx}\"",
    "prettier:staged": "pretty-quick --staged --parser typescript --write",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore src",
    "lint:tests": "eslint --quiet --cache --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore ./src/test",
    "lint:file": "eslint --cache --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "lint:quiet": "eslint --quiet --cache --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore --ignore-pattern \"*.test.*\" src",
    "lint:quiet:fix": "eslint --quiet --fix --cache --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore --ignore-pattern \"*.test.*\" src",
    "lint:staged": "eslint . --quiet --ignore-path .gitignore --cache --ext .js,.jsx,.ts,.tsx --ignore-pattern \"*.test.*\" --ignore-pattern '/__test__/*' --ignore-pattern '/docs/*' --ignore-pattern '/module-build/*' --ignore-pattern '/src/utils/ipfs-utils'",
    "launch:chromium:unsecure": "google-chrome --disable-web-security --allow-file-access-from-files --user-data-dir=\"/tmp/chromium_tmp\"",
    "docs:generate": "typedoc --out docs src",
    "build:decentralized-protocol": "npm run build:module"
  },
  "main": "src/index.ts",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run lint:staged",
      "git add ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:staged && lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@trust/webcrypto": "0.9.2",
    "ajv": "^6.10.2",
    "assert": "^2.0.0",
    "bl": "^4.0.2",
    "buffer": "^5.4.3",
    "encoding-down": "^6.3.0",
    "fast-deep-equal": "^3.1.3",
    "firebase": "^8.7.0",
    "ipfs": "^0.54.4",
    "level-js": "^5.0.0",
    "levelup": "^4.3.2",
    "localforage": "^1.7.3",
    "lodash.defaultsdeep": "^4.6.1",
    "lodash.memoize": "^4.1.2",
    "lz-string": "^1.4.4",
    "mime": "^2.4.4",
    "normalize-url": "^4.5.0",
    "orbit-db": "^0.26.1",
    "sort-keys": "^3.0.0",
    "validator": "^12.1.0",
    "@pashoo2/utils": "^0.0.1",
    "@pashoo2/typed-array-utils": "0.0.1",
    "@pashoo2/crypto-utilities": "0.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-typescript": "^4.1.1",
    "@types/assert": "^1.4.3",
    "@types/bl": "^2.1.0",
    "@types/chai": "^4.2.4",
    "@types/chai-as-promised": "^7.1.2",
    "@types/chai-subset": "^1.3.3",
    "@types/date-fns": "^2.6.0",
    "@types/encoding-down": "^5.0.0",
    "@types/firebase": "^3.2.1",
    "@types/jest": "^24.9.1",
    "@types/json-schema": "^7.0.6",
    "@types/level-js": "^4.0.1",
    "@types/levelup": "^3.1.1",
    "@types/localforage": "0.0.34",
    "@types/lodash.defaultsdeep": "^4.6.6",
    "@types/lodash.memoize": "^4.1.6",
    "@types/lz-string": "^1.3.33",
    "@types/mime": "^2.0.1",
    "@types/mocha": "^5.2.7",
    "@types/multiaddr": "^7.2.0",
    "@types/node": "12.0.12",
    "@types/orbit-db": "git+https://github.com/orbitdb/orbit-db-types.git",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "@types/uuid": "^3.4.5",
    "@types/validator": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "cross-env": "^7.0.2",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "patch-package": "^6.4.7",
    "prettier": "^2.1.2",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-scripts": "^3.4.0",
    "rollup": "^2.8.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "ts-essentials": "^7.0.1",
    "ts-jest": "^25.1.0",
    "ts-transformer-imports": "^0.4.3",
    "ttypescript": "^1.5.10",
    "typedoc": "^0.20.35",
    "typescript": "^4.3.5"
  }
}
