{
  "extends": "./tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "target": "es2015",
    "module": "esnext",
    "isolatedModules": true,
    "removeComments": true,
    "importHelpers": true,
    "rootDirs": ["src/"],
    "outDir": "./decentralized-protocol",
    "skipLibCheck": true,
    "plugins": [{ "transform": "ts-transformer-imports" }]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.json"],
  "exclude": ["./build", "src/**/*.tsx", "src/app-render.tsx"]
}
