{
  "extends": "./tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "noEmit": false,
    "target": "ES2019",
    "module": "esnext",
    "isolatedModules": true,
    "removeComments": true,
    "importHelpers": true,
    "outDir": "./decentralized-protocol/src",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "plugins": [{ "transform": "ts-transformer-imports" }],
    "incremental": false
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.json"],
  "exclude": ["./build", "src/dev.ts", "src/prod.ts", "src/**/*.tsx", "src/**/*.jsx", "src/components"]
}
